                                    <Label Content="Путь к папке с файлами КМ" Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="3" Padding="10,0,0,0"/>
                                    <TextBox Name="EditSubject_ProjectFolderPath" Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="3"/>

                                    <Label Content="Имя бланка регистрации" Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2" Padding="10,0,0,0"/>
                                    <TextBox Name="EditSubject_RegistrationForm" Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,5,0"/>

                                    <Label Content="Имя бланка ответов №1" Grid.Row="12" Grid.Column="2" Grid.ColumnSpan="1" Padding="10,0,0,0"/>
                                    <TextBox Name="EditSubject_AnswersForm1" Grid.Row="13" Grid.Column="2" Grid.ColumnSpan="1" Margin="5,0,0,0"/>

                                    <Label Content="Имя бланка ответов №2" Grid.Row="14" Grid.Column="0" Grid.ColumnSpan="2" Padding="10,0,0,0"/>
