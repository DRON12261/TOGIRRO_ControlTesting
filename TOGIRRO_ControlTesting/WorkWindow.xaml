            <StatusBarItem HorizontalAlignment="Left">
                <Border BorderBrush="DarkGray" BorderThickness="1" Height="50"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Left">
                <Grid>
                    <Border Name="InfoIcon" BorderThickness="1" BorderBrush="MidnightBlue" Background="SteelBlue" MouseEnter="Info_MouseEnter" MouseLeave="Info_MouseLeave">
                        <Image Width="40" Source="Icons/Info.png" Margin="0"/>
                    </Border>
                    <Popup Name="InfoPopup" Placement="Top" StaysOpen="True" MouseLeave="InfoPopup_MouseLeave" MaxWidth="1000">
                        <Border BorderThickness="3" BorderBrush="MidnightBlue">
                            <Grid Background="LightSteelBlue">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition MinHeight="100"/>
                                </Grid.RowDefinitions>
