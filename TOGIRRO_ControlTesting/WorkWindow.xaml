                                    <RadioButton Name="EditSubject_MarkSystem" GroupName="GradeSystem" Content="Оценка" Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="3"/>

                                    <Button Margin="0,0,5,0" Grid.Row="12" Grid.Column="0" Click="ButtonC_EditSubject_Edit" Grid.ColumnSpan="2" ToolTip="Подтвердить редактирование">
