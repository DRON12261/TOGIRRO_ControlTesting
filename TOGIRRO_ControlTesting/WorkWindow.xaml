                <Grid Grid.Column="0" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid Margin="10,0,10,10" Grid.Column="0">
                        <ToggleButton Name="CreateSubjectMenu_Button" Click="ButtonC_CreateSubject" ToolTip="Создание предмета">
                            <Image Source="Icons/Plus.png"/>
                        </ToggleButton>
                    </Grid>
                    <Grid Margin="0,0,0,10" Grid.Column="1">
                        <ToggleButton Name="EditSubjectMenu_Button" Click="ButtonC_EditSubject" ToolTip="Редактирование предмета">
                            <Image Source="Icons/Edit.png"/>
                        </ToggleButton>
                    </Grid>
                    <Grid Margin="10,0,10,10" Grid.Column="2">
                        <Button Name="DeleteSubject_Button" Click="ButtonC_DeleteSubject" ToolTip="Удаление предмета">
                            <Image Source="Icons/Trash.png"/>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>

            <TabControl Name="MainField" Margin="6" Grid.Column="2" Grid.Row="0">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem"/>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
                <TabItem Name="EditAnswersMode">
                    <Grid Margin="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="107*"/>
                            <RowDefinition Height="559*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.RowSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="42"/>
                                <RowDefinition Height="42"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Label Name="CurrentSubjectName1" HorizontalAlignment="Center" FontStretch="ExtraExpanded" Grid.Row="0" Grid.Column="0" Margin="0,0,0,10"></Label>
                            
                            <Grid Grid.Row="0" Grid.Column="1" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="32"/>
                                </Grid.ColumnDefinitions>

                                <Label Name="CurrentSubjectType1" HorizontalAlignment="Center" FontStretch="ExtraExpanded" Grid.Row="0" Grid.Column="0"></Label>
                                <Button Name="AnswerList_ChangeTableVisibilityButton" Click="AnswerList_ChangeTableVisibilityButton_Click" Grid.Column="1" ToolTip="Вкл./Выкл. видимость всех элементов">
                                    <Image Name="AnswerList_VisibilityButton" Source="Icons/Show.png"/>
                                </Button>
                            </Grid>

                            <TabControl Grid.Row="1" Grid.Column="0" Margin="0,0,10,10" Padding="0">
                                <TabControl.Resources>
                                    <Style TargetType="TabItem">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TabItem"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TabControl.Resources>
                                <TabItem Name="SelectVariantMode">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="64"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="32"/>
                                            <ColumnDefinition Width="32"/>
                                            <ColumnDefinition Width="32"/>
                                        </Grid.ColumnDefinitions>

                                        <Label>Вариант:</Label>
                                        <ComboBox Name="CurrentVariantCBox" DisplayMemberPath="Name" Grid.Column="1" SelectionChanged="CurrentVariantCBox_SelectionChanged" IsSynchronizedWithCurrentItem="True">
                                        </ComboBox>
                                        <Button Grid.Column="2" Click="ButtonC_CreateVariant" ToolTip="Создать вариант">
                                            <Image Source="Icons/Plus.png"/>
                                        </Button>
                                        <Button Grid.Column="3" Click="ButtonC_EditVariantNameMode" ToolTip="Редактировать название варианта">
                                            <Image Source="Icons/Edit.png"/>
                                        </Button>
                                        <Button Grid.Column="4" Click="ButtonC_DeleteVariant" ToolTip="Удалить вариант">
                                            <Image Source="Icons/Delete.png"/>
                                        </Button>
                                    </Grid>
                                </TabItem>
                                <TabItem Name="EditVariantMode">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="64"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="32"/>
                                            <ColumnDefinition Width="32"/>
                                        </Grid.ColumnDefinitions>

                                        <Label>Вариант:</Label>
                                        <TextBox Name="CurrentVariantTextbox" Grid.Column="1" KeyDown="CurrentVariantTextbox_KeyDown"/>
